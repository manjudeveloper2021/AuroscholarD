<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mobulebg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_14sdp"
            android:background="@color/mobulebg"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#595959"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."></androidx.appcompat.widget.AppCompatTextView>
           <androidx.appcompat.widget.AppCompatTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Features"
               android:layout_marginTop="@dimen/_14sdp"
               android:textSize="@dimen/_16sdp"
               android:textColor="#5C5C5C"></androidx.appcompat.widget.AppCompatTextView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_10sdp"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="@+id/imageView5">

         <LinearLayout
             android:layout_width="match_parent"
             android:padding="@dimen/_10sdp"
             android:orientation="vertical"
             android:layout_height="wrap_content">
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/over_video"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:src="@drawable/video_icon"></ImageView>
                 <androidx.appcompat.widget.AppCompatTextView
                     android:id="@+id/head_txt"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_toRightOf="@id/over_video"
                     android:textSize="@dimen/_12sdp"
                     android:textColor="#595959"
                     android:layout_marginLeft="@dimen/_10sdp"
                     android:text="Video Tutorials">
                 </androidx.appcompat.widget.AppCompatTextView>

                 <ImageView

                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:src="@drawable/check_circle"></ImageView>
             </RelativeLayout>
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/over_access"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:src="@drawable/infinite_icon"></ImageView>
                 <androidx.appcompat.widget.AppCompatTextView
                     android:id="@+id/head_txt2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_toRightOf="@id/over_access"
                     android:textSize="@dimen/_12sdp"
                     android:textColor="#595959"
                     android:layout_marginLeft="@dimen/_10sdp"
                     android:text="Unlimited Access">
                 </androidx.appcompat.widget.AppCompatTextView>

                 <ImageView

                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:src="@drawable/check_circle"></ImageView>
             </RelativeLayout>
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/over_certify"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:src="@drawable/certify_icon"></ImageView>
                 <androidx.appcompat.widget.AppCompatTextView
                     android:id="@+id/head_txt3"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_toRightOf="@id/over_certify"
                     android:textSize="@dimen/_12sdp"
                     android:textColor="#595959"
                     android:layout_marginLeft="@dimen/_10sdp"
                     android:text="Recognized Certification">
                 </androidx.appcompat.widget.AppCompatTextView>

                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:src="@drawable/check_circle"></ImageView>
             </RelativeLayout>
         </LinearLayout>




            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>