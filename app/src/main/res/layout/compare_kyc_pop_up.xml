<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="16dp">
<ImageView
    android:id="@+id/imgcancel"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:visibility="visible"
    android:layout_gravity="right"
    android:src="@drawable/ic_cancel_icon"></ImageView>
        <TextView
            android:id="@+id/txtconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm KYC Details"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
        <TextView
            android:id="@+id/txtdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:textSize="@dimen/_12sdp"
            android:text="Do you want to change these details ?"
            android:textAlignment="center"/>
        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_margin="2dp"
           android:padding="2dp"
           android:orientation="vertical">


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_12sdp"
               android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"

               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"

                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/_5ssp"


                       android:orientation="vertical">
                   <CheckBox
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:buttonTint="@color/blue_color"

                       android:id="@+id/checkdob"></CheckBox>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="-10dp"
                           android:layout_marginLeft="@dimen/_3ssp"

                           android:text="edit"></TextView>
                   </LinearLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/tiDOB"
                   style="@style/TextInputLayoutStyle"
                   android:hint="DOB (YYYY-MM-DD)"
               android:paddingRight="@dimen/_7ssp"
                   android:paddingLeft="@dimen/_4ssp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/etDOB"
                       android:enabled="false"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:focusable="true"
                       android:maxEms="10"
                       android:maxLength="10"
                       android:inputType="none"
                       android:longClickable="false"
                       android:drawableRight="@android:drawable/ic_menu_my_calendar"
                       android:gravity="left"
                    android:editable="false"
                       android:maxLines="1"
                       android:paddingEnd="@dimen/_10sdp"
                       android:textColor="@color/black" />
               </com.google.android.material.textfield.TextInputLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"

                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"

                       android:layout_marginTop="@dimen/_5ssp"
                       android:orientation="vertical">
                       <CheckBox
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:buttonTint="@color/blue_color"

                           android:id="@+id/checkadhar"></CheckBox>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="-10dp"
                           android:layout_marginLeft="@dimen/_3ssp"

                           android:text="edit"></TextView>
                   </LinearLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/tiAdhar"
                   android:padding="5dp"
                   android:hint="Adhaar no"
                   style="@style/TextInputLayoutStyle"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/etAdhar"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                      android:digits="0123456789"
                       android:enabled="false"

                       android:longClickable="false"
                       android:gravity="left"
                       android:maxLength="12"
                       android:maxEms="12"
                       android:inputType="number"
                       android:maxLines="1"
                       android:paddingEnd="@dimen/_20sdp"
                       android:textColor="@color/black" />
               </com.google.android.material.textfield.TextInputLayout>
               </LinearLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/tiAddress"
                   android:padding="5dp"
                   android:hint="Address"
                   android:visibility="gone"
                   style="@style/TextInputLayoutStyle"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/etAddress"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:enabled="true"
                       android:longClickable="false"
                       android:gravity="left"
                       android:inputType="textPersonName"
                       android:maxLines="1"
                       android:paddingEnd="@dimen/_20sdp"
                       android:textColor="@color/black" />
               </com.google.android.material.textfield.TextInputLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/_5ssp"

                       android:orientation="vertical">
                       <CheckBox
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:buttonTint="@color/blue_color"

                           android:id="@+id/checkgender"></CheckBox>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="-10dp"
                           android:layout_marginLeft="@dimen/_3ssp"

                           android:text="edit"></TextView>
                   </LinearLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/tiGender"
                   style="@style/TextInputLayoutExposeStyle"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Gender"
                   android:textColorHint="@color/auro_border_blue"
                   app:endIconMode="none"
                   android:padding="5dp"
                   android:longClickable="false"
                   android:editable="false"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent">

                   <AutoCompleteTextView
                       android:id="@+id/etGender"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:drawablePadding="@dimen/_18sdp"
                       android:dropDownHeight="wrap_content"
                       android:focusable="false"
                       android:drawableRight="@drawable/ic_user_drop_down"
                       android:gravity="left"
                       android:longClickable="false"
                       android:maxLines="1"
                       android:paddingEnd="@dimen/_20sdp"
                       android:textColor="@color/black"
                       android:enabled="false"


                       />


               </com.google.android.material.textfield.TextInputLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"

                       android:layout_marginTop="@dimen/_5ssp"
                       android:orientation="vertical">
                       <CheckBox
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:buttonTint="@color/blue_color"

                           android:id="@+id/checkname"></CheckBox>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="-10dp"
                           android:layout_marginLeft="@dimen/_3ssp"

                           android:text="edit"></TextView>
                   </LinearLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/tiAdharName"
                   android:padding="5dp"
                   android:hint="Name"
                   style="@style/TextInputLayoutStyle"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/etAdharName"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:enabled="false"

                       android:longClickable="false"
                       android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                       android:gravity="left"
                       android:inputType="textPersonName"
                       android:maxLines="1"
                       android:paddingEnd="@dimen/_20sdp"
                       android:textColor="@color/black" />
               </com.google.android.material.textfield.TextInputLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/_5ssp"

                       android:orientation="vertical">
                       <CheckBox
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:buttonTint="@color/blue_color"

                           android:id="@+id/checkpincode"></CheckBox>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="-10dp"
                           android:layout_marginLeft="@dimen/_3ssp"

                           android:text="edit"></TextView>
                   </LinearLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/tiPincode"
                   android:padding="5dp"
                   android:hint="Pincode"
                   style="@style/TextInputLayoutStyle"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/etPincode"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:enabled="false"

                       android:gravity="left"
                       android:inputType="number"
                       android:digits="0123456789"
                       android:longClickable="false"
                       android:maxEms="6"
                       android:maxLength="6"
                       android:maxLines="1"
                       android:paddingEnd="@dimen/_20sdp"
                       android:textColor="@color/black" />
               </com.google.android.material.textfield.TextInputLayout>
               </LinearLayout>
           </LinearLayout>
           <Button
               android:id="@+id/buttonOk"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_margin="5dp"
               android:padding="8dp"
               android:visibility="gone"
               android:textAllCaps="false"
               android:background="@color/auro_green_color"
               android:text="Do you want to change details"
               android:textColor="#FFF" />
           <Button
               android:id="@+id/buttonsave"
               android:layout_width="180dp"
               android:visibility="visible"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:padding="5dp"
               android:layout_marginTop="10dp"
               android:textAllCaps="false"
               android:background="@color/color_red"
               android:text="Save"
               android:textColor="#FFF" />
       </LinearLayout>
    </LinearLayout>
</LinearLayout>