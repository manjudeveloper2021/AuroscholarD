                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="visible"
                                app:Font="ArticulatCF-Regular.otf" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/auro_color_grey" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/seprartion_color">

                                <LinearLayout
                                    android:id="@+id/llstudent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:layout_weight="1.5"
                                        android:orientation="vertical">

                                        <com.auro.application.core.util.uiwidget.RPTextView
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rvItemPic"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start"
                                            android:clipToPadding="true"
                                            android:layoutDirection="rtl"
                                            android:orientation="horizontal"
                                            android:paddingLeft="@dimen/_10sdp"
                                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                            app:reverseLayout="true" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:layout_weight="0.5"
                                        android:orientation="vertical">

                                        <com.auro.application.core.util.uiwidget.RPTextView
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_marginBottom="@dimen/_10sdp"
                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />

                                        <ImageView
                                            android:id="@+id/bt_add_group"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            android:layout_marginLeft="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_17sdp"
                                            android:background="@color/shimmer_color"
                                            android:layout_marginRight="@dimen/_10sdp"
                                          />


                                    </LinearLayout>

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/llstudent">

                                    <com.auro.application.core.util.uiwidget.RPTextView
                                        android:id="@+id/rpChoose_Student"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:background="@color/shimmer_color"
                                        android:textColor="@color/auro_text_grey"
                                        android:textSize="@dimen/_12sdp"
                                        android:visibility="visible"
                                        app:Font="ArticulatCF-Regular.otf" />

                                    <LinearLayout
                                        android:id="@+id/rv_choose_student"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/rpChoose_Student"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:orientation="vertical"
                                        android:clipToPadding="true">
                                        <com.auro.application.core.util.uiwidget.RPTextView
                                            android:id="@+id/student_list_message"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"

                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />


                                        <com.auro.application.core.util.uiwidget.RPTextView

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"

                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />


                                        <com.auro.application.core.util.uiwidget.RPTextView

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"

                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />


                                        <com.auro.application.core.util.uiwidget.RPTextView

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"

                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />


                                        <com.auro.application.core.util.uiwidget.RPTextView

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"

                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />


                                        <com.auro.application.core.util.uiwidget.RPTextView

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"

                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />


                                        <com.auro.application.core.util.uiwidget.RPTextView

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"

                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />

                                        <com.auro.application.core.util.uiwidget.RPTextView

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"

                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />

                                        <com.auro.application.core.util.uiwidget.RPTextView

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"

                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />

                                        <com.auro.application.core.util.uiwidget.RPTextView

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"

                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />

                                        <com.auro.application.core.util.uiwidget.RPTextView

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"

                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />

                                        <com.auro.application.core.util.uiwidget.RPTextView

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:layout_marginStart="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_10sdp"

                                            android:background="@color/shimmer_color"
                                            android:textColor="@color/auro_text_grey"
                                            android:textSize="@dimen/_12sdp"
                                            android:visibility="visible"
                                            app:Font="ArticulatCF-Regular.otf" />


                                    </LinearLayout>


                                </RelativeLayout>

                            </RelativeLayout>

                            <!-- </RelativeLayout>-->
                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
