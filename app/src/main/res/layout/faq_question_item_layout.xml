<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout


    android:id="@+id/consParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_faq_ques_box"
    android:layout_marginTop="@dimen/_10sdp"
    android:padding="@dimen/_12sdp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_ques">
    <TextView
        android:id="@+id/tvques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        android:text="What is KYC ?" />
    <ImageView
        android:id="@+id/imgopen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_down_faq"
        android:layout_alignParentRight="true"></ImageView>
    <ImageView
        android:id="@+id/imgclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/faq_arrow_up"
        android:visibility="gone"
        android:layout_alignParentRight="true"></ImageView>
</RelativeLayout>
    <TextView
        android:id="@+id/tvans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   android:layout_below="@+id/layout_ques"
        android:textColor="#4D626F"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5ssp"
        android:textSize="@dimen/_12ssp"
        android:text="What is KYC ?" />
</RelativeLayout>
</layout>
