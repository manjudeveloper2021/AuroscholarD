<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clickItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      >

        <RelativeLayout
            android:id="@+id/RlLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/language_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.auro.application.core.util.uiwidget.RPTextView
                android:id="@+id/RpLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:maxLines="1"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="English"
                android:textColor="@color/auro_border_blue"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/checkItem"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_auro_check"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/RlLanguage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/RlLanguage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>