<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_height="wrap_content">

    <com.auro.application.core.util.uiwidget.RPTextView
       android:id="@+id/RpGrade"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/auro_grade_background"

        android:text="1st"
        android:textColor="@color/auro_grey"
        android:textSize="@dimen/_11sdp"
        android:gravity="center"
        app:Font="ArticulatCF-Regular.otf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/checkItem"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@drawable/ic_auro_check"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/RpLanguage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/RpLanguage" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>