<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.auro.application.home.presentation.viewmodel.HomeViewModel" />

    </data>


    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_height="wrap_content">

         <ImageView
             android:id="@+id/quiz_icon"

             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_gravity="center"
             android:layout_width="@dimen/_20sdp"
             android:layout_height="@dimen/_20sdp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/quiz_icon"
            app:layout_constraintTop_toTopOf="parent">

            <com.auro.application.core.util.uiwidget.RPTextView
                android:id="@+id/quiz_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:text="Quiz No"
                android:textColor="@color/grey_color"
                android:textSize="@dimen/_10sdp"
                app:Font="Poppins-Regular.ttf"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.auro.application.core.util.uiwidget.RPTextView
                android:id="@+id/quiz_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="01"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:Font="Poppins-Regular.ttf"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


    </LinearLayout>




</layout>