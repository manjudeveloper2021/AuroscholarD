<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".teacher.presentation.view.fragment.InformationDashboardFragment">
        <RelativeLayout
            android:id="@+id/mainParentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_background"
            tools:context=".home.presentation.view.fragment.MainQuizHomeFragment"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"

                android:gravity="center"

                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:padding="@dimen/_16sdp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_img"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:divider="@android:color/transparent"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_profile_icon"
                                android:layout_margin="3dp"
                                android:scaleType="fitXY" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_toRightOf="@+id/card_img"
                            android:id="@+id/layout_studentpassport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <com.auro.application.core.util.uiwidget.RPTextView
                                android:id="@+id/tvStudentName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="left"
                                android:visibility="visible"
                                android:text="Name"
                                app:Font="ArticulatCF-Medium.otf"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:orientation="horizontal">
                                <com.auro.application.core.util.uiwidget.RPTextView
                                    android:id="@+id/txtkycstatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_gravity="left"
                                    android:visibility="visible"
                                    android:text="Mobile No. : "
                                    app:Font="ArticulatCF-Medium.otf"/>
                                <com.auro.application.core.util.uiwidget.RPTextView
                                    android:id="@+id/tvMobile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_gravity="left"
                                    android:visibility="visible"

                                    app:Font="ArticulatCF-Medium.otf"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_alignParentRight="true"
                        app:tint="@color/white"
                        android:src="@drawable/login_right_corner"></ImageView>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_14sdp"
                android:background="@drawable/student_round_bottom"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="bold"></TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_36sdp"
                    android:id="@+id/rel1">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:id="@+id/imgprofile"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/profile_ic"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:layout_toRightOf="@id/imgprofile"
                        android:textStyle="bold"></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/imgpnext"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next_ic"></ImageView>
                </RelativeLayout>
                <View
                    android:id="@+id/view1"
                    android:layout_below="@id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:background="@color/menuline"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_below="@id/view1"
                    android:id="@+id/rel2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/imgcourse"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:src="@drawable/course_ic"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:layout_toRightOf="@id/imgcourse"
                        android:textStyle="bold"></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/imgpnext2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next_ic"></ImageView>
                </RelativeLayout>
                <View
                    android:id="@+id/view2"
                    android:layout_below="@id/rel2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:background="@color/menuline"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_below="@id/view2"
                    android:id="@+id/rel3">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:id="@+id/imgpassport"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/passport_ic"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passport"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:layout_toRightOf="@id/imgpassport"
                        android:textStyle="bold"></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/imgpnext3"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/next_ic"></ImageView>
                </RelativeLayout>
                <View
                    android:layout_below="@id/rel3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:background="@color/menuline"></View>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/recycler_menu">
                </androidx.recyclerview.widget.RecyclerView>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_alignParentLeft="true"
                    android:rotation="270"
                    android:src="@drawable/left_corner"></ImageView>
                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_alignParentRight="true"
                    android:rotation="-180"
                    android:src="@drawable/left_corner"></ImageView>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>