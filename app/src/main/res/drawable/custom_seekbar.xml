<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- color, size, shape height of seekbar -->
    <item android:gravity="center_vertical">
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/white" />
            <solid android:color="@color/white"/>
            <size android:height="@dimen/_14sdp"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>
    <!-- color, size, shape height of seekbar when u drag it-->
    <item android:gravity="center_vertical"
        android:start="@dimen/_2sdp"
        >
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false"
                    android:drawable="@color/white"/>
                <item>
                    <shape android:shape="rectangle">
                        <gradient
                            android:angle="90"
                            android:centerColor="#12AFFF"
                            android:endColor="#007ECB"
                            android:startColor="#007ECB"
                            android:type="linear" />
                        <size android:height="@dimen/_10sdp"/>
                        <corners android:radius="40dp"/>
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>
