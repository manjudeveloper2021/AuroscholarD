        android:shape="rectangle">
        <corners android:bottomRightRadius="15dp"
            android:topRightRadius="0dp"
            android:topLeftRadius="15dp"
            android:bottomLeftRadius="15dp"/>
        <solid android:color="#9C27B0"></solid>
    </shape>
</item>
</layer-list>