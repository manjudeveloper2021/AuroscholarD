        <shape android:shape="oval">

            <stroke
                android:width="5dp"
                android:color="@color/balance_green_color" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>

    </item>

    <item>

        <shape
            android:innerRadius="40dp"
