<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="AppThemeNew" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>


    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <!--
        <item name="fontFamily">@font/opensans_regular</item>
-->
        <item name="android:textSize">@dimen/_7sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.BottomNavigationStudent" parent="Widget.Design.BottomNavigationView"
        >
    <!--
    <item name="fontFamily">@font/opensans_regular</item>
-->
        <item name="android:actionMenuTextColor">@color/txtDarkGrey</item>
        <item name="android:textSize">@dimen/_7sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/auro_border_blue</item>

        <item name="boxCornerRadiusBottomEnd">@dimen/_18sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_18sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_18sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_18sdp</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@color/red</item>

        <item name="android:textColor">@color/auro_border_blue</item>
        <item name="android:textColorHint">@color/auro_border_blue</item>
        <item name="colorControlNormal">@color/auro_border_blue</item>
        <item name="colorControlActivated">@color/auro_border_blue</item>
        <item name="colorControlHighlight">@color/auro_border_blue</item>
    </style>


    <style name="TextInputLayoutExposeStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/auro_border_blue</item>

        <item name="boxCornerRadiusBottomEnd">@dimen/_18sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_18sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_18sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_18sdp</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@color/red</item>

        <item name="android:textColor">@color/auro_border_blue</item>
        <item name="android:textColorHint">@color/auro_border_blue</item>
        <item name="colorControlNormal">@color/auro_border_blue</item>
        <item name="colorControlActivated">@color/auro_border_blue</item>
        <item name="colorControlHighlight">@color/auro_border_blue</item>
    </style>


    <declare-styleable name="RPView">
        <attr name="Font" format="string" />
        <attr name="starPin" format="boolean" />
    </declare-styleable>

    <style name="Widget.BottomNavigationViewSelect" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/_8sdp</item>
        <!-- <item name="fontFamily">@font/opensans_regular</item>-->
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/toolbar_pink</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/taupe</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <declare-styleable name="ExpandableTextView">
        <attr name="animation_duration" format="integer" />
    </declare-styleable>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">

        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@color/red</item>
        <item name="android:textColor">@color/color_dim_grey</item>
        <item name="android:textColorHint">@color/color_dim_grey</item>
        <item name="colorControlNormal">@color/color_dim_grey</item>
        <item name="colorControlActivated">@color/color_dim_grey</item>
        <item name="colorControlHighlight">@color/color_dim_grey</item>

    </style>
    <style name="MyEditTextSchol" parent="Theme.AppCompat.Light">

        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@color/red</item>
        <item name="android:textColor">@color/color_dim_grey</item>
        <item name="android:textColorHint">@color/color_dim_grey</item>




    </style>


    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/sppiner_background</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/color_dim_grey</item>
        <item name="colorControlNormal">@color/color_dim_grey</item>
        <item name="colorControlActivated">@color/color_dim_grey</item>
        <item name="colorControlHighlight">@color/color_dim_grey </item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="FullWidth.Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowAnimationStyle">@style/DialogAnimation</item>-->
    </style>

    <style name="FinestWebViewTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/finestWhite</item>
        <item name="colorPrimaryDark">@color/finestGray</item>
        <item name="colorAccent">@color/finestBlack</item>
        <item name="android:textColorPrimary">@color/finestBlack</item>
        <item name="android:textColorSecondary">@color/finestSilver</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


</resources>
